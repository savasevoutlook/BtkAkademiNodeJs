ul.list-group
    if categories && categories.length > 0
        each category in categories
            a(href=`/categories/${category.id}`, class=(category.id === selectedCategoryId) ? "list-group-item list-group-item-action active" : "list-group-item list-group-item-action") #{category.name}
    else
        li.list-group-item.text-muted No categories found
