mixin createProduct(product)
    .col-md-4
        .card.mb-3
            img.card-img-top(src=`/img/${product.image}`, alt=product.name)
            .card-body
                h5.card-title
                    a(href=`/products/${product.id}`) #{product.name}
                p.card-text.pt-2 #{product.description}

                small.text-muted
                    i.fas.fa-lira-sign #{product.price} TL

            .card-footer.text-center
                a.btn.btn-sm.btn-outline-danger(href=`/addtocart/${product.id}`) Add to Cart
                