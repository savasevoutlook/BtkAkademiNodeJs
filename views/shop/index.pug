extends ../layouts/main-layout.pug

include ../includes/createProduct.pug

block content

    .row
        .col-3
            include ../includes/menu.pug
        .col-9
            include ../includes/slider.pug

            .row.my-4
                if products.length > 0
                    each product in products
                        +createProduct(product)
                else
                    .col-12
                        h6 No Products 
